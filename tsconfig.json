{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
